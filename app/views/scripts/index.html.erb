<h1>Listing scripts</h1>

<table>
  <tr>
    <th>Language</th>
    <th>Size bytes</th>
    <th>Code</th>
  </tr>

<% @scripts.each do |script| %>
  <tr>
    <td><%=h script.language.name %></td>
    <td><%=h script.size_bytes %></td>
    <td><%=h script.code %></td>
    <td><%= link_to 'Show', task_script_path(@task, script) %></td>
    <td><%= link_to 'Edit', edit_task_script_path(@task, script) %></td>
    <td><%= link_to 'Destroy', task_script_path(@task, script), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New script', new_task_script_path %>
